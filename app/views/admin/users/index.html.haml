%header
  %span.h Listing users

%section
  %table#users_overview
    %col.actions
    %col.groups
    %col.user-username
    %col.user-email
    %thead
      %tr
        %th Actions
        %th Groups
        %th Username
        %th Email
    %tfoot
      %tr
        %td{ :colspan => 4 }= link_to 'Add', new_admin_user_path
    %tbody
      - @users.each do |user|
        %tr
          %td
            %span.view= link_to 'View', [:admin, user]
            %span.edit= link_to 'Edit', edit_admin_user_path(user)
            %span.destroy= link_to 'Delete', [:admin, user], :confirm => 'Are you sure?', :method => :delete # FIXME clicking this simply GETs the resource
          %td= user.groups.map { |group| group.name }.sort.join ', '
          %td= user.username
          %td= mail_to user.email

!!! 5
%html{ :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en'}
  %head
    = show_widgets @selected_widgets[:head_start]

    %title= @title

    %meta{ 'http-equiv' => 'Content-Type', 'content' => 'application/xhtml+xml; charset=utf-8' }/
    = csrf_meta_tag

    /%link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }/
    = auto_discovery_link_tag

    = theme_tags @selected_theme

    = show_widgets @selected_widgets[:head_end]
  %body{ body_attributes, :class => @selected_layout.name.dasherize }
    = show_widgets @selected_widgets[:body_start]

    %header#branding= show_widgets @selected_widgets[:branding]

    %nav#main_menu
      = render :partial => 'shared/menu', :locals => { :items => @main_menu_items }

    %section#flash= show_widgets @selected_widgets[:flash]

    %section#content= yield

    %footer#credits= show_widgets @selected_widgets[:credits]

    = show_widgets @selected_widgets[:body_end]

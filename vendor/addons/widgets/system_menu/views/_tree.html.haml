- if items.present?
  %menu<>
    - items.each do |item|
      %li{ :class => item.href && current_page?(item.href) ? 'current' : nil }<>
        - link = current_page?(item.href) ? item.name : link_to_if(item.href, item.name, item.href)
        - if item.children
          %label<>= link
        - else
          = link
        - if item.children
          = show_addon Widgets::SystemMenu, '_tree', :items => item.children

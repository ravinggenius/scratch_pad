!!! 5
%html{ :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en'}
  %head
    %title= @title

    %meta{ 'http-equiv' => 'Content-Type', 'content' => 'application/xhtml+xml; charset=utf-8' }/
    = csrf_meta_tag

    - # %link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }/
    = auto_discovery_link_tag

    = stylesheet_link_tag assets_styles_path

    = javascript_include_tag assets_scripts_path

    = render 'shared/tracking_google', :google_analytics_tracking_code => '123456789.00' if @show_tracking_google

  %body{ :id => page_id, :class => page_class }
    %header#branding
      %span.h= link_to @site_name, root_path
      %span= @site_tagline

    %nav#main_menu
      %ul
        - if @user_klass.current == @user_klass.anonymous
          %li= link_to 'Sign In', new_session_path
        -else
          %li= link_to 'User Profile', node_path(@user_klass.current) 

    %section#content
      = yield

    %footer#credits
      %p= raw "&copy; #{@site_name}"

    = render 'shared/unobtrusive' if @show_unobtrusive_badge
    = render 'shared/tracking_woopra' if @show_tracking_woopra
